{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Sayble",
  "version": "0.1.0",
  "identifier": "com.sayble.app",
  "build": {
    "beforeDevCommand": "npm run vite:dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run vite:build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Sayble",
        "width": 1180,
        "height": 780,
        "visible": true,
        "decorations": false
      },
      {
        "label": "floating",
        "url": "index.html?window=floating",
        "title": "",
        "width": 300,
        "height": 52,
        "visible": false,
        "decorations": false,
        "transparent": false,
        "alwaysOnTop": true,
        "resizable": false,
        "skipTaskbar": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
